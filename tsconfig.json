{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2018",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "verbatimModuleSyntax": false,
    "inlineSources": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./scripts/*.ts", "./assets", "postcss.config.js"],
  "exclude": ["node_modules"]
}
