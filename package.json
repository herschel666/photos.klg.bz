{
  "name": "photoblog-hugo",
  "private": true,
  "scripts": {
    "css": "esbuild --bundle assets/styles/main.css --outfile=dist/styles.css",
    "postcss": "postcss dist/styles.css --use autoprefixer --use cssnano -d dist/",
    "watch:css": "npm run css -- --watch",
    "js": "esbuild --bundle --sourcemap assets/scripts/main.ts --outfile=dist/scripts.js",
    "watch:js": "npm run js -- --watch",
    "watch:hugo": "hugo server -D",
    "start": "npm-run-all --parallel watch:**",
    "prebuild": "rm -rf ./dist",
    "build:assets": "npm-run-all --parallel css \"js -- --minify\"",
    "build:hugo": "hugo --minify",
    "build": "npm-run-all build:*",
    "fetch-insta": "ts-node scripts/fetch-insta.ts",
    "tsc": "tsc --noEmit",
    "test": "npm-run-all tsc"
  },
  "devDependencies": {
    "@types/node": "14.14.31",
    "@types/turbolinks": "5.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "typescript": "4.2.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.2",
    "autoprefixer": "10.2.4",
    "contentful": "8.1.7",
    "cssnano": "4.1.10",
    "dotenv": "8.2.0",
    "emoji-regex": "8.0.0",
    "esbuild": "0.8.49",
    "postcss": "8.2.6",
    "postcss-cli": "8.3.1",
    "slugify": "1.4.7",
    "turbolinks": "5.2.0"
  }
}
