{
  "name": "photoblog-hugo",
  "private": true,
  "scripts": {
    "css": "esbuild --bundle assets/styles/main.css",
    "postcss": "postcss dist/*.css --use autoprefixer --use cssnano -d dist/",
    "watch:css": "npm run css -- --outfile=dist/styles.css --watch",
    "bundle:css": "npm run css -- --outdir=dist --public-path=/ --entry-names=styles.[hash] --metafile=data/styles.json",
    "js": "esbuild --bundle --sourcemap assets/scripts/main.ts",
    "watch:js": "npm run js -- --outfile=dist/scripts.js --watch",
    "bundle:js": "npm run js -- --outdir=dist --public-path=/ --entry-names=scripts.[hash] --bundle --minify --metafile=data/scripts.json",
    "watch:hugo": "hugo server -D",
    "start": "npm-run-all --parallel watch:**",
    "prebuild": "rm -rf ./dist",
    "postbuild": "rm data/*.json",
    "build:assets": "npm-run-all --parallel bundle:**",
    "build:hugo": "hugo --minify",
    "build": "npm-run-all build:*",
    "fetch-insta": "ts-node scripts/fetch-insta.ts",
    "lint": "eslint --quiet --ignore-path .gitignore ./{scripts,assets}/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "fmt": "prettier --config ./.prettierrc --ignore-path ./.prettierignore .",
    "fmt:check": "npm run fmt -- --check",
    "fmt:write": "npm run fmt -- --write",
    "tsc": "tsc --noEmit",
    "test": "npm-run-all lint tsc fmt:check"
  },
  "devDependencies": {
    "@types/node": "14.14.41",
    "@types/turbolinks": "5.2.0",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-prettier": "3.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.3",
    "autoprefixer": "10.2.5",
    "contentful": "8.2.1",
    "cssnano": "5.0.1",
    "dotenv": "8.2.0",
    "emoji-regex": "9.2.2",
    "esbuild": "0.11.8",
    "postcss": "8.2.10",
    "postcss-cli": "8.3.1",
    "slugify": "1.5.0",
    "turbolinks": "5.2.0"
  }
}
